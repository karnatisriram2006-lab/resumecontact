rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // For the purpose of this project, any authenticated user is considered an admin.
    // In a production app, you should use custom claims to identify admins.
    // https://firebase.google.com/docs/auth/admin/custom-claims
    function isAdmin() {
      return request.auth != null;
    }

    // Resume Requests can be created by anyone.
    // Only admins can read, update, or delete them.
    match /resumeRequests/{requestId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // Contact Messages can be created by anyone.
    // Only admins can read, update, or delete them.
    match /contactMessages/{messageId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
  }
}
